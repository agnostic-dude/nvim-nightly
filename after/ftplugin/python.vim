setlocal tabstop=4
setlocal softtabstop=4
setlocal shiftwidth=4
setlocal expandtab

" PEP8 states that lines should not exceed 79 characters; so that, users with 80
" column displays can view each line of source code without line wrapping.
" i.e. Only character the 80th column may have is a NEWLINE character.
setlocal textwidth=79
setlocal colorcolumn=+1
